---
import { Image } from 'astro:assets';
import BannerStack from './BannerStack.astro';
---

<section class="relative">
      <Image
        alt='GS_grey_withstars'
        src={'/images/GS_Lettering_black.png'}
        width={180}
        height={80}
        class='scale-50 -top-10 right-[3.2rem] lg:scale-100 lg:right-24 lg:top-0 2xl:right-[25rem] 3xl:right-[41rem] 2xl:-top-2 hidden md:absolute md:block'
        priority
      />
  <div class="flex flex-col gap-4 px-7 py-8 md:px-20 md:pb-14 2xl:px-96 3xl:px-[40rem]">
    <h6 class="text-center text-sm sm:text-2xl tracking-tighter sm:tracking-normal ">
      Welcome To GS/OSD3 & GS/OSD6 Vietnam
    </h6>
    <div class="text-center text-2xl md:text-[2.9rem] font-extrabold md:leading-3 tracking-tighter hover:text-bosch_blue md:mt-10 lg:text-[4rem] ">
      <h1>
        <p>Global Service</p>
        <p class="px-0 md:mt-12">Operation Source To Deliver</p>
      </h1>
    </div>
  </div>
  
  <div class="flex flex-col gap-6 md:mt-16 md:grid md:grid-cols-12 md:gap-0 lg:grid-cols-12 lg:pr-10 xl:grid-cols-12 xl:gap-0 xl:pr-0 2xl:px-96 3xl:px-[40rem]">
    <Image
      alt="bosch-hero-section"
      src="https://res.cloudinary.com/dr9bxbmwi/image/upload/v1757663285/be-likabosch_yet7y1.webp"
      width={1600}
      height={900}
      class="sm:min-h-[25.5rem] md:col-span-8 lg:col-span-8 lg:col-start-1 3xl:col-span-7 3xl:col-start-1"
      loading="eager"
      fetchpriority="high"
    />
    <div class="m-auto min-w-full space-y-3 md:col-span-4 bg-transparent p-4 md:min-w-80 lg:col-span-4 2xl:pr-0">
      <BannerStack />
    </div>
  </div>
</section>