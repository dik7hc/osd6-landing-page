---
import { Image } from 'astro:assets';
---

<div class="absolute left-0 top-0 z-20 h-1.5 w-full bg-[url('/images/header-cover.svg')] bg-cover bg-center bg-no-repeat"></div>

<header class="relative bg-background">
	<div class="flex h-5 w-full items-center justify-between gap-4 px-2 py-10 pb-7 md:h-20 md:px-20 md:py-14 2xl:px-96 3xl:px-[40rem]">
		<a href="/" class="flex-shrink-0">
			<Image
				width="144"
				height="96"
				src="/images/bosch_logo_de.svg"
				alt="Bosch Logo"
				class="scale-75 md:scale-100"
			/>
		</a>
		
		<button class="size-9 md:hidden flex items-center justify-center rounded-md hover:bg-gray-100 transition-colors">
			<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<line x1="4" x2="20" y1="6" y2="6"></line>
				<line x1="4" x2="20" y1="12" y2="12"></line>
				<line x1="4" x2="20" y1="18" y2="18"></line>
			</svg>
		</button>

		<!-- Desktop Navigation -->
		<div class="hidden h-full items-center gap-2 md:flex">
			<a href="/about" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors hover:bg-gray-100 px-4 py-2 text-gray-700 hover:text-gray-900 font-bosch">
				About us
			</a>
			<a href="/service-portfolio" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors hover:bg-gray-100 px-4 py-2 text-gray-700 hover:text-gray-900 font-bosch">
				Our service portfolio
			</a>
		</div>
	</div>
</header>
