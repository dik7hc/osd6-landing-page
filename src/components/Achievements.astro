---
import { Users, Euro, FlaskConical, MapPin } from "lucide-astro";
import SectionHeader from "./SectionHeader.astro";
---

<section>
  <SectionHeader>Achievements</SectionHeader>

  <div class="grid grid-cols-2 gap-4 bg-gray-200 md:grid-cols-4">
    <div class="flex flex-col items-center p-6 py-16">
      <Users class="mb-2 w-8 h-8 text-blue-600" />
      <div class="text-2xl md:text-4xl font-bold text-blue-600">417,900</div>
      <div class="text-center text-sm text-gray-600">
        associates worldwide
      </div>
    </div>

    <div class="flex flex-col items-center p-6 py-16">
      <Euro class="mb-2 w-8 h-8 text-green-600" />
      <div class="text-2xl md:text-4xl font-bold text-green-600">90.3</div>
      <div class="text-center text-sm text-gray-600">
        billion euros sales revenue
      </div>
    </div>

    <div class="flex flex-col items-center p-6 py-16">
      <FlaskConical class="mb-2 w-8 h-8 text-purple-600" />
      <div class="text-2xl md:text-4xl font-bold text-purple-600">86,800</div>
      <div class="text-center text-sm text-gray-600">
        associates in research and development
      </div>
    </div>

    <div class="flex flex-col items-center p-6 py-16">
      <MapPin class="mb-2 w-8 h-8 text-yellow-600" />
      <div class="text-2xl md:text-4xl font-bold text-yellow-600">150+</div>
      <div class="text-center text-sm text-gray-600">
        locations globally
      </div>
    </div>
  </div>
</section>
