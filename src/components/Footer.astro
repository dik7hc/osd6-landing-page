---
import {
  Linkedin,
  Youtube,
  Facebook,
  Instagram,
  Twitter,
  ExternalLink,
  ChevronUp
} from "lucide-astro";
import BackToTopBtn from "./BackToTopBtn.astro";

// If BackToTopBtn is React, import it with a client directive
// import BackToTopBtn from "../back-to-top-btn.jsx";
---

<footer class="bg-gray-800 p-8 text-white md:px-20 md:py-12 xl:px-40 2xl:px-96 3xl:px-[40rem]">
  <!-- Top section with logo and social icons -->
  <div class="mb-8 flex flex-col items-start justify-between md:flex-row md:items-center">
    <div>
      <h2 class="text-2xl font-medium">Sáng tạo vì cuộc sống</h2>
    </div>

    <div class="mt-4 flex items-center space-x-6 md:mt-0">
      <a href="#" aria-label="LinkedIn" class="hover:text-gray-300">
        <Linkedin class="w-5 h-5" />
      </a>
      <a href="#" aria-label="YouTube" class="hover:text-gray-300">
        <Youtube class="w-5 h-5" />
      </a>
      <a href="#" aria-label="Facebook" class="hover:text-gray-300">
        <Facebook class="w-5 h-5" />
      </a>
      <a href="#" aria-label="Instagram" class="hover:text-gray-300">
        <Instagram class="w-5 h-5" />
      </a>
      <a href="#" aria-label="Twitter" class="hover:text-gray-300">
        <Twitter class="w-5 h-5" />
      </a>
    </div>
  </div>

  <!-- Middle section with links -->
  <div class="mb-8">
    <ul class="flex flex-wrap gap-6 md:gap-8">
      <li>
        <a href="#" class="hover:underline">Thông tin liên hệ chung</a>
      </li>
      <li>
        <a href="#" class="flex items-center hover:underline">
          Giấy phép và bằng sáng chế
          <ExternalLink class="ml-1 w-4 h-4" />
        </a>
      </li>
      <li>
        <a href="#" class="flex items-center hover:underline">
          Mua hàng và hậu cần
          <ExternalLink class="ml-1 w-4 h-4" />
        </a>
      </li>
    </ul>
  </div>

  <!-- Divider -->
  <div class="relative mb-8 border-t border-gray-600">
    <!-- Replace with Astro/React wrapper if needed -->
    <!-- <BackToTopBtn client:load /> -->
	<BackToTopBtn client:load />
  </div>

  <!-- Bottom section with copyright and legal links -->
  <div class="flex flex-col-reverse flex-wrap gap-y-4 text-xs text-gray-300">
    <div class="w-full md:mr-8 md:w-auto">
      © Công ty TNHH Bosch Việt Nam 2025, tất cả các quyền được đăng ký
    </div>
    <div class="flex flex-col flex-wrap gap-2 md:flex-row md:gap-x-6">
      <a href="#" class="whitespace-nowrap hover:underline">Điều khoản sử dụng</a>
      <a href="#" class="whitespace-nowrap hover:underline">Thông báo pháp lý</a>
      <a href="#" class="whitespace-nowrap hover:underline">Điều khoản về Quyền riêng tư</a>
      <a href="#" class="whitespace-nowrap hover:underline">Cài đặt về Quyền riêng tư</a>
    </div>
  </div>
</footer>
